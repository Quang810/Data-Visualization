{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "description": "Fastfood calories",
  "title": "Average calories per serving of popular fastfood",
  "data": {
    "url": "https://raw.githubusercontent.com/Quang810/FIT3179/main/Junkfood_calories_fat.csv"
  },
  "layer": [
    {
      "selection": {
        "category_highlight": {
          "type": "multi",
          "field": ["Category"],
          "bind": "legend"
        }
      },
      "mark": {"type": "arc", "outerRadius": 110},
      "encoding": {
        "theta": {
          "field": "Calories",
          "type": "quantitative",
          "aggregate": "average"
        },
        "color": {
          "field": "Category",
          "type": "nominal",
          "scale": {
            "range": [
              "#396A1B",
              "#88AAD8",
              "#A5667E",
              "#7A2384",
              "#e6550d",
              "#fd8d3c",
              "#FB30CB",
              "#fdd0a2",
              "#31CDA0",
              "#74c476",
              "#CFF270",
              "#0847A8"
            ]
          }
        },
        "tooltip": [
          {
            "field": "Fat",
            "type": "quantitative",
            "aggregate": "average",
            "format": ".0f",
            "title": "Average Fat Per Serving"
          },
          {
            "field": "Calories",
            "type": "quantitative",
            "aggregate": "average",
            "format": ".0f",
            "title": "Average Calories Per Serving"
          }
        ],
        "opacity": {
          "condition": {"selection": "category_highlight", "value": 0.6},
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "x": 512,
        "y": 300,
        "fontSize": 12,
        "font": "Arial"
      },
      "encoding": {
        "text": {"value": "Burritos has highest calories per serving"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "x": 480,
        "y": 220,
        "fontSize": 12,
        "font": "Arial"
      },
      "encoding": {"text": {"value": "Burgers has highest fat per serving"}}
    }
  ],
  "config": {}
}