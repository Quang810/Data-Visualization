{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "description": "Fastfood calories",
  "title": "Junkfood average calories per serving",
  "data": {
    "url": "https://raw.githubusercontent.com/Quang810/FIT3179/main/Junkfood_calories_fat.csv"
  },
  "params": [
    {
      "name": "category_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Pizza",
          "Bagels",
          "Burritos",
          "Chicken strips",
          "Coffee",
          "Donuts",
          "French fires",
          "Muffins",
          "Other breakfast",
          "Pizza",
          "Salads",
          "sandwiches"
        ],
        "labels": [
          "Show All",
          "Pizza",
          "Bagels",
          "Burritos",
          "Chicken strips",
          "Coffee",
          "Donuts",
          "French fires",
          "Muffins",
          "Other breakfast",
          "Pizza",
          "Salads",
          "sandwiches"
        ],
        "name": "Category Selection"
      }
    }
  ],
  "transform": [
    {
      "filter": "category_selection == null || datum.Category == category_selection"
    }
  ],
  "selection": {
    "category_highlight": {
      "type": "multi",
      "field": ["Category"],
      "bind": "legend"
    }
  },
  "mark": {"type": "arc", "outerRadius": 110},
  "encoding": {
    "theta": {
      "field": "Calories",
      "type": "quantitative",
      "aggregate": "average"
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "scale": {
        "range": [
          "#396A1B",
          "#88AAD8",
          "#A5667E",
          "#7A2384",
          "#e6550d",
          "#fd8d3c",
          "#FB30CB",
          "#fdd0a2",
          "#31CDA0",
          "#74c476",
          "#CFF270",
          "#0847A8"
        ]
      }
    },
    "tooltip": [
      {
        "field": "Fat",
        "type": "quantitative",
        "aggregate": "average",
        "title": "Average Fat"
      },
      {
        "field": "Calories",
        "type": "quantitative",
        "aggregate": "average",
        "title": "Average Calories"
      }
    ],
    "opacity": {
      "condition": {"selection": "category_highlight", "value": 0.6},
      "value": 0.2
    }
  },
  "view": {"stroke": null},
  "config": {}
}