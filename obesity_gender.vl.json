{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Quang810/FIT3179/main/US%20obesity%201999-2016%20gender%20all.csv"
  },
  "selection": {
    "gender_highlight": {
      "type": "multi",
      "fields": ["Gender"],
      "bind": "legend"
    }
  },
  "mark": "bar",
  "encoding": {
    "x": {"field": "Survey period", "type": "temporal", "title": "Year"},
    "y": {"field": "Obesity", "type": "quantitative", "title": "Obesity rate"},
    "color": {"field": "Gender", "type": "nominal"},
    "tooltip": [
      {
        "field": "Overweight",
        "type": "quantitative",
        "title": "Overweight rate"
      },
      {"field": "Obesity", "type": "quantitative", "title": "Obesity rate"},
      {
        "field": "Severe obesity",
        "type": "quantitative",
        "title": "Severe Obesity, rate"
      }
    ],
    "opacity": {
      "condition": {"selection": "gender_highlight", "value": 0.6},
      "value": 0.2
    }
  },
  "config": {}
}